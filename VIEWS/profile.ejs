            color: var(--primary-color);
        }

        .detail-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 1.5rem;
        }

        .detail-item {
            margin-bottom: 1.25rem;
        }

        .detail-item span {
            display: block;
            font-weight: 500;
            color: var(--text-light);
            margin-bottom: 0.25rem;
            font-size: 0.9rem;
        }

        .detail-item p {
            margin: 0;
            color: var(--text-color);
