  <script>
    document.addEventListener('DOMContentLoaded', function() {
      // 1. Animation for cards with staggered delay
      const animateElements = () => {
        const elements = document.querySelectorAll('.stat-card, .branch-section');
        
        elements.forEach((el, index) => {
          setTimeout(() => {
            el.style.opacity = '1';
            el.style.transform = 'translateY(0)';
            el.style.transition = 'opacity 0.4s ease, transform 0.4s ease';
          }, index * 150);
        });
      };
  
      // 2. User avatar initialization
      const initUserAvatar = () => {
        const username = '<%= user.userName %>';
        const avatar = document.createElement('div');
        avatar.className = 'avatar-circle';
        avatar.textContent = username.charAt(0).toUpperCase();
        
        const userInfoContainer = document.querySelector('.header-left');
        if (userInfoContainer) {
          userInfoContainer.appendChild(avatar);
        }
      };
  
      // 3. Ripple effect for buttons
      const addRippleEffect = () => {
        const buttons = document.querySelectorAll('.logout-btn, .action-btn');
        
        buttons.forEach(button => {
          button.addEventListener('click', function(e) {
            const rect = this.getBoundingClientRect();
            const x = e.clientX - rect.left;
            const y = e.clientY - rect.top;
            
            const ripple = document.createElement('span');
            ripple.className = 'ripple-effect';
            ripple.style.left = `${x}px`;
            ripple.style.top = `${y}px`;
            
            this.appendChild(ripple);
            
            setTimeout(() => {
              ripple.remove();
            }, 600);
          });
        });
      };
  
      // 4. Responsive adjustments
      const handleResponsive = () => {
        if (window.innerWidth < 768) {
          document.querySelectorAll('.subjects-list').forEach(list => {
            list.style.marginLeft = '0.5rem';
          });
        }
      };
  
      // 5. Initialize all functions
      const init = () => {
        animateElements();
        initUserAvatar();
        addRippleEffect();
        handleResponsive();
        
        // Add resize listener for responsive adjustments
        window.addEventListener('resize', handleResponsive);
      };
  
      init();
    });
  
    // Ripple effect animation
    const style = document.createElement('style');
    style.textContent = `
      @keyframes ripple {
        to {
          transform: scale(4);
          opacity: 0;
        }
      }
      .ripple-effect {
        position: absolute;
        border-radius: 50%;
        background: rgba(255, 255, 255, 0.7);
        transform: scale(0);
        animation: ripple 0.6s linear;
        pointer-events: none;
      }
      .avatar-circle {
        width: 40px;
        height: 40px;
        background-color: #6366f1;
        color: white;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 600;
        margin-left: 1rem;
      }
    `;
    document.head.appendChild(style);
  </script>
